<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_paths"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.dynasty.myapplication.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_login_fragment"
            app:destination="@id/login_fragment" />
        <action
            android:id="@+id/action_mainFragment_to_requestOTPFragment"
            app:destination="@id/requestOTPFragment" />
        <action
            android:id="@+id/action_mainFragment_to_eventHomeScreenFragment"
            app:destination="@id/eventHomeScreenFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainFragment_to_testingFragment"
            app:destination="@id/testingFragment" />
    </fragment>
    <fragment
        android:id="@+id/requestOTPFragment"
        android:name="com.dynasty.myapplication.RequestOTPFragment"
        android:label="fragment_request_o_t_p"
        tools:layout="@layout/fragment_request_o_t_p" >
        <action
            android:id="@+id/action_requestOTPFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_requestOTPFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.dynasty.myapplication.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_eventHomeScreenFragment"
            app:destination="@id/eventHomeScreenFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="mobileNumber"
            app:argType="integer" />
        <action
            android:id="@+id/action_signUpFragment_to_requestOTPFragment"
            app:destination="@id/requestOTPFragment"
            app:popUpTo="@id/requestOTPFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/eventHomeScreenFragment"
        android:name="com.dynasty.myapplication.EventHomeScreenFragment"
        android:label="fragment_event_home_screen"
        tools:layout="@layout/fragment_event_home_screen" >
        <action
            android:id="@+id/action_eventHomeScreenFragment_to_eventDetailedFragment"
            app:destination="@id/eventDetailedFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popUpTo="@id/eventHomeScreenFragment" />
        <action
            android:id="@+id/action_eventHomeScreenFragment_to_editEventFragment"
            app:destination="@id/editEventFragment" />
    </fragment>
    <fragment
        android:id="@+id/testingFragment"
        android:name="com.dynasty.myapplication.TestingFragment"
        android:label="fragment_testing"
        tools:layout="@layout/fragment_testing" />
    <fragment
        android:id="@+id/login_fragment"
        android:name="com.dynasty.myapplication.LogInFragment"
        android:label="login_fragment" >
        <action
            android:id="@+id/action_login_fragment_to_requestOTPFragment"
            app:destination="@id/requestOTPFragment"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_login_fragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_login_fragment_to_eventHomeScreenFragment"
            app:destination="@id/eventHomeScreenFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/eventDetailedFragment"
        android:name="com.dynasty.myapplication.EventDetailedFragment"
        android:label="fragment_event_detailed"
        tools:layout="@layout/fragment_event_detailed" >
        <action
            android:id="@+id/action_eventDetailedFragment_to_editEventFragment"
            app:destination="@id/editEventFragment" />
        <action
            android:id="@+id/action_eventDetailedFragment_to_eventHomeScreenFragment"
            app:destination="@id/eventHomeScreenFragment"
            app:popUpTo="@id/eventDetailedFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/editEventFragment"
        android:name="com.dynasty.myapplication.EditEventFragment"
        android:label="fragment_edit_event"
        tools:layout="@layout/fragment_edit_event" >
        <action
            android:id="@+id/action_editEventFragment_to_eventHomeScreenFragment"
            app:destination="@id/eventHomeScreenFragment"
            app:popUpTo="@id/editEventFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_editEventFragment_to_eventDetailedFragment"
            app:destination="@id/eventDetailedFragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>