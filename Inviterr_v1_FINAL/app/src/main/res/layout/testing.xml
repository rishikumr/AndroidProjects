<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/event_name_full_detail_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:fontFamily="@font/bold"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/event_location_edit_detail_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_location_full_detail_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="Location"
        android:fontFamily="@font/regular"
        android:gravity="start"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/event_date_full_detail_page"
        app:layout_constraintEnd_toStartOf="@+id/event_date_full_detail_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/event_date_full_detail_page" />

    <TextView
        android:id="@+id/event_date_full_detail_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/regular"
        android:gravity="start"
        android:textSize="30dp"
        android:text="Date"
        app:layout_constraintBaseline_toBaselineOf="@+id/event_location_edit_detail_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/event_location_edit_detail_page" />

    <TextView
        android:id="@+id/event_description_edit_detail_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"
        android:fontFamily="@font/regular"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_location_edit_detail_page" />
</androidx.constraintlayout.widget.ConstraintLayout>